
<% @step.errors.messages.each do |attr, message| %>
  <p>error on <%= attr %><%= message %></p>
<% end %>

<%= form_for @step do |f| %>

  <%= f.label(:name) %>
  <%= f.text_field(:name) %>
  <%= f.label(:description) %>
  <%= f.text_field(:description) %>
  <%= f.label(:total_time) %>
  <%= f.number_field(:total_time) %>

  <%= f.submit %>
<% end %>





